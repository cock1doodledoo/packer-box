{
  "builders": [
    {
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz ",
        "auto=true ",
        "fb=false ",
        "keymap=jp ",
        "hostname={{user `hostname`}} ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "DEBCONF_DEBUG=5 ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "guest_additions_path": "VBoxGuestAdditions_{{ .Version }}.iso",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
      "iso_checksum_type": "md5",
      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
      "shutdown_command": "sudo -S shutdown -P now",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_timeout": "20m",
      "ssh_username": "{{user `username`}}",
      "type": "virtualbox-iso",
      "vm_name": "{{user `hostname`}}"
    }
  ],
  "post-processors": [
    {
      "output": "{{user `hostname`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo {{user `password`}} | sudo -E -S bash {{ .Path }}",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/update.sh"
      ],
      "type": "shell"
    },
    {
      "execute_command": "sudo -E bash {{ .Path }}",
      "scripts": [
        "scripts/base.sh",
        "scripts/virtualbox.sh",
        "scripts/locale.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "hostname": "base",
    "password": "vagrant",
    "username": "vagrant"
  }
}

